{
  "include": ["src"],
  "ts-node": { "require": ["tsconfig-paths/register"] },
  "compilerOptions": {
    "lib": ["ES2021"],
    "target": "ES2021",
    "module": "None",
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "allowJs": true,
    "checkJs": false,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "useUnknownInCatchVariables": false // Todo: remove
  }
}
